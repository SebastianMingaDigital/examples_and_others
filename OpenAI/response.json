{
  "name": "ad_response",
  "strict": true,
  "schema": {
    "type": "object",
    "properties": {
      "headline": {
        "type": "string",
        "description": "Engaging product headline (maximum 10 words)"
      },
      "description": {
        "type": "string",
        "description": "Persuasive product description (maximum 20 words)"
      },
      "cta": {
        "type": "string",
        "description": "Call to action (maximum 3 words)"
      }
    },
    "required": [
      "headline",
      "description",
      "cta"
    ],
    "additionalProperties": false
  }
}
